{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@entities/*": ["entities/*"],
      "@features/*": ["features/*"],
      "@pages/*": ["pages/*"],
      "@shared/*": ["shared/*"],
      "@widgets/*": ["widgets/*"],
      "@assets/*": ["widgets/*"],

      // App sub-aliases
      "@app-router/*": ["app/router/*"],
      "@app-hooks/*": ["app/hooks/*"],
      "@providers/*": ["app/providers/*"],
      "@error-boundary/*": ["app/error-boundary/*"],

      // Pages sub-aliases
      "@character-page/*": ["pages/character/*"],
      "@episode-page/*": ["pages/episode/*"],
      "@location-page/*": ["pages/location/*"],
      "@login-page/*": ["pages/login/*"],
      "@main-page/*": ["pages/main/*"],
      "@not-found-page/*": ["pages/not-found/*"],

      // Entities sub-aliases
      "@character/*": ["entities/character/*"],
      "@episode/*": ["entities/episode/*"],
      "@location/*": ["entities/location/*"],

      // Features sub-aliases
      "@auth/*": ["features/auth/*"],
      "@pagination/*": ["features/pagination/*"],

      // Shared sub-aliases
      "@api/*": ["shared/api/*"],
      "@app-types/*": ["shared/types/*"],
      "@ui/*": ["shared/ui/*"],
      "@utils/*": ["shared/utils/*"],

      // Widgets sub-aliases
      "@layout/*": ["widgets/layout/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
